<LoginPage>:

    size: 500, 500

    FitImage:
        source: "background.jpg"

    MDCard:
        size_hint: .5, .9
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: "vertical"
        padding: dp(50)
        elevation: 2
        md_bg_color: "#F4F4F6"

        MDLabel:
            id: login
            size_hint: 1, .4
            text: "Login"
            font_style: "H2"
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: "center"

        MDTextField:
            id: uname
            icon_left: "account"
            hint_text: "Enter username"
            username: True
            helper_text_mode: "on_error"
            size_hint: .8, .1
            pos_hint: {"center_x": .5}

        MDTextField:
            id: password
            icon_left: "key-variant"
            hint_text: "Enter password"
            password: True
            helper_text_mode: "on_error"
            size_hint: .8, .1
            pos_hint: {"center_x": .5}

        MDBoxLayout:
            size_hint: .8, .07
            pos_hint: {"center_x": .5}

            MDCheckbox:
                id: showpassword
                size_hint: .1,1
                pos_hint: {"center_x": .5, "center_y": .5}
                on_active: root.show_password()

            MDLabel:
                text: 'Show password'
                size_hint: .9,1
                pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            size_hint: .8, .1
            pos_hint: {"center_x": .5}

            MDFillRoundFlatButton:
                text: "New user"
                md_bg_color: "#808080"
                size_hint: .2, .7
                pos_hint: {"center_x": .2, "center_y": .5}
                on_press: root.parent.current = "SignupPage"


            MDFillRoundFlatButton:
                id: login
                size_hint: .2, .7
                text: "Login"
                pos_hint: {"center_x": .8, "center_y": .5}
                md_bg_color: "#000000"
                on_press: root.try_login()



