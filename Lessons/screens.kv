ScreenManager:
    id: main_scr
    MainScreen:
        name: "MainScreen"

    SecondScreen:
        name: "SecondScreen"

<SecondScreen>:
    MDRaisedButton:
        pos: dp(250), dp(550)
        text: "Go back"
        on_press:
            root.parent.current = "MainScreen"


<MainScreen>:
    MDCard:
        size_hint: .8, .8
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: "#219ebc"
        orientation: 'vertical'


        FitImage:
            size_hint: .8, .5
            pos_hint: {"center_x": .5, "center_y": .5}
            source: "pc.png"


        MDRaisedButton:
            text: "Next page"
            on_press:
                root.change_to_page_2()
                app.change_to_page_2()
